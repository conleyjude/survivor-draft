/* AdminDashboard.css */

.admin-dashboard {
  width: 100%;
}

.admin-header {
  text-align: center;
  margin-bottom: 3rem;
  padding: 2rem;
  background: var(--gradient-fire);
  color: var(--color-text-inverse);
  border-radius: 8px;
}

.admin-header h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.admin-header p {
  font-size: 1.1rem;
  opacity: 0.9;
}

.admin-sections {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.admin-section-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 2rem;
  background: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px var(--color-shadow-light);
  text-decoration: none;
  color: var(--color-text-main);
  transition: all 0.3s ease;
  border-left: 4px solid var(--color-danger);
  position: relative;
  overflow: hidden;
}

.admin-section-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(193, 18, 31, 0.05) 0%, rgba(193, 18, 31, 0.03) 100%);
  pointer-events: none;
}

.admin-section-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 8px 16px var(--color-shadow);
  border-left-color: var(--color-moss-green);
}

.card-icon {
  font-size: 3rem;
}

.admin-section-card h2 {
  font-size: 1.3rem;
  margin: 0;
  position: relative;
}

.admin-section-card p {
  color: var(--color-text-light);
  text-align: center;
  margin: 0;
  position: relative;
}

.arrow {
  color: var(--color-moss-green);
  font-size: 1.5rem;
  transition: transform 0.3s ease;
  position: relative;
}

.admin-section-card:hover .arrow {
  transform: translateX(4px);
}

.admin-footer {
  background: #fef3e0;
  border: 1px solid var(--color-warning);
  border-radius: 8px;
  padding: 1.5rem;
  text-align: center;
}

.admin-footer p {
  color: #8b5a3c;
  margin-bottom: 1rem;
  font-weight: 500;
}

.admin-footer a {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: var(--gradient-jungle);
  color: var(--color-text-inverse);
  text-decoration: none;
  border-radius: 4px;
  transition: background 0.3s ease;
}

.admin-footer a:hover {
  background: linear-gradient(135deg, var(--color-jungle-dark) 0%, var(--color-moss-green) 100%);
}

@media (max-width: 768px) {
  .admin-sections {
    grid-template-columns: 1fr;
  }

  .admin-header h1 {
    font-size: 1.8rem;
  }
}
