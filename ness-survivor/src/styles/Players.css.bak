.players-container {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.add-player-form {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 10px;
  margin-bottom: 20px;
  padding: 20px;
  background-color: var(--color-bg-secondary);
  border-radius: 8px;
}

.add-player-form input {
  padding: 8px;
  border: 1px solid var(--color-border);
  border-radius: 4px;
}

.add-player-form button {
  padding: 8px 16px;
  background: var(--gradient-jungle);
  color: var(--color-text-inverse);
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.add-player-form button:hover {
  background: linear-gradient(135deg, var(--color-jungle-dark) 0%, var(--color-moss-green) 100%);
}

.players-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
}

.player-card {
  padding: 15px;
  background-color: white;
  border: 1px solid var(--color-border);
  border-radius: 8px;
  box-shadow: 0 2px 4px var(--color-shadow-light);
}

.player-card h3 {
  margin: 0 0 10px 0;
  color: var(--color-text-main);
}

.player-card p {
  margin: 5px 0;
  color: var(--color-text-light);
}

.player-card button {
  margin-top: 10px;
  padding: 6px 12px;
  background-color: var(--color-danger);
  color: var(--color-text-inverse);
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.player-card button:hover {
  background-color: #a00d1a;
}