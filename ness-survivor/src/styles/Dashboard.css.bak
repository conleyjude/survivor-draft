/* Dashboard.css */

.dashboard {
  width: 100%;
}

.dashboard-hero {
  text-align: center;
  margin-bottom: 3rem;
  padding: 2rem;
  background: var(--gradient-jungle);
  color: var(--color-text-inverse);
  border-radius: 8px;
}

.dashboard-hero h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.dashboard-hero p {
  font-size: 1.2rem;
  opacity: 0.9;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.dashboard-section {
  background: white;
  border-radius: 8px;
  padding: 2rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.dashboard-section h2 {
  font-size: 1.5rem;
  margin-bottom: 1.5rem;
  color: var(--color-text-main);
  border-bottom: 2px solid var(--color-moss-green);
  padding-bottom: 0.5rem;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.stat-card {
  background: var(--gradient-bronze);
  color: var(--color-text-inverse);
  padding: 1.5rem;
  border-radius: 8px;
  text-align: center;
}

.stat-card h3 {
  font-size: 0.9rem;
  opacity: 0.9;
  margin-bottom: 0.5rem;
}

.stat-number {
  font-size: 2rem;
  font-weight: bold;
}

.mini-leaderboard {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.leaderboard-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.75rem;
  background: #f8f9fa;
  border-radius: 4px;
}

.rank {
  font-weight: bold;
  color: var(--color-deep-jungle);
  min-width: 40px;
}

.team-name {
  flex: 1;
  font-weight: 500;
}

.team-score {
  color: var(--color-deep-jungle);
  font-weight: bold;
}
}

.view-all-link {
  display: inline-block;
  margin-top: 1rem;
  color: var(--color-deep-jungle);
  text-decoration: none;
  font-weight: 500;
}

.view-all-link:hover {
  color: var(--color-moss-green);
}

.seasons-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 1rem;
}

.season-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  background: var(--gradient-jungle);
  color: var(--color-text-inverse);
  text-decoration: none;
  border-radius: 8px;
  transition: transform 0.3s ease;
  cursor: pointer;
}

.season-card:hover {
  transform: translateY(-4px);
}

.season-card h3 {
  font-size: 1.2rem;
  margin-bottom: 0.25rem;
}

.season-card p {
  font-size: 0.9rem;
  opacity: 0.9;
}

.admin-link-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
}

.admin-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 1.5rem;
  background: white;
  border: 2px solid #ecf0f1;
  border-radius: 8px;
  text-decoration: none;
  color: #2c3e50;
  transition: all 0.3s ease;
  cursor: pointer;
}

.admin-link:hover {
  border-color: var(--color-moss-green);
  background: var(--color-bg-secondary);
  transform: translateY(-4px);
}

.admin-link .icon {
  font-size: 2rem;
}

.admin-link .label {
  font-size: 0.9rem;
  font-weight: 500;
  text-align: center;
}

.loading,
.no-data {
  text-align: center;
  color: var(--color-text-light);
  padding: 2rem;
  font-style: italic;
}

@media (max-width: 768px) {
  .dashboard-hero h1 {
    font-size: 1.8rem;
  }

  .dashboard-grid {
    grid-template-columns: 1fr;
  }
}
